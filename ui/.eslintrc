{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jasmine": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "react/jsx-filename-extension": [1, {"extensions": [".js"]}],
    "comma-dangle": ["error", {
      "arrays": "only-multiline",
      "objects": "only-multiline",
      "imports": "only-multiline",
      "exports": "only-multiline",
      "functions": "never"
    }],
    "class-methods-use-this": 0,
    "no-continue": 0,
    "no-param-reassign": 0,
    "import/prefer-default-export": 0,
    "react/prop-types": 0,   // temporarily disabled
    "react/no-array-index-key": 0,
    "max-len": 0,  // temporarily disabled
    "no-shadow": 0,
    "jsx-quotes": ["error", "prefer-double"],
    "quotes": ["error", "single"],
    "no-console": "warn",
    "react/jsx-no-bind": ["error", {
      "allowFunctions": true
    }]
  }
}
